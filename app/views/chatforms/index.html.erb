      </script>
    <div id="wrapper">
			<div id="texts">
			     <%= render @chatforms.order("created_at ASC").last(15)%>
			</div>
			     <%= render 'form'%>
			<div id="chatUsers" class="rounded">
			   <h3>Currently on chatapp!</h3>
				  <% User.all.each do |user|%>
				  <%= user.name %>
				  <br />
				  <% end %>
			</div>
			
			
			<%= subscribe_to "/chatforms" %>
			

     </div>
